{
  "name": "Price Detector",
  "description": "Detect price on a web page.",
  "version": "0.0.1",
  "minimum_chrome_version": "31",
  "manifest_version": 2,
  "permissions": [
    "http://*/",
    "<all_urls>",
    "contextMenus",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "/icon-128.png",
    "default_popup": "/popup.html"
  },
  "icons": {
    "16": "/icon-16.png",
    "128": "/icon-128.png"
  },
  "background": {
    "scripts": ["main.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["/recorddom.js"]
  }]
}
